<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Button 
    	id="tag" 
    	icon="sap-icon://print" 
    	tooltip="{i18n>printTAG}" 
    	enabled="true" 
    	press="onPrintTAG"
    	visible="{= ${status} !== '0001'}"
    />
    <Button
        id="rcti"
        icon="sap-icon://pdf-attachment" 
        tooltip="{i18n>printRCTI}"
        press="onShowRCTIDocuments"
        visible="{= ${rcti} === 'X'}"
    />  
    
</core:FragmentDefinition>